{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/news.css" type="text/css"/>
{% endblock %}

{% block content_header %}<h3>News</h3>{% endblock %}
{% block content %}
    <div id="news">
    {% for new in news|reverse %}
        <div id="new">
            <div id="title">
                <h4>{{ new.title }}</h4>
            </div>
            <div id="text">
                {{ new.text }}
            </div>
            <div id="author">
                Autor: {{ new.author }}
            </div>
            <div id="date">
                Data: {{ new.data|date('d/m/Y') }}
            </div>
        </div>
    {% endfor %}

    </div>
{% endblock %}